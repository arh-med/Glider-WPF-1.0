<UserControl x:Class="Glider_WPF_1._0.UserControlMail.MessageRecipientsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Glider_WPF_1._0.UserControlMail"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Border Background="#eeeeee"  CornerRadius="0 15 15 15" Margin="10,12">
                <StackPanel>
                    <TextBlock Margin="15,15,15,0" TextWrapping="Wrap" Text="{Binding BodyMessage}" Foreground="Black"/>
                    <TextBlock Text="{Binding Heading}" FontSize="9" HorizontalAlignment="Right" Margin="0,3,3,10" Foreground="Gray"/>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <TextBlock Text="{Binding TimeMessage}"   FontSize="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
