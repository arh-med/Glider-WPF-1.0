<UserControl x:Class="Glider_WPF_1._0.UserControlMail.MessageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Glider_WPF_1._0.UserControlMail"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#b3e5fc" CornerRadius="15 0 15 15" Margin="10,12">
            <TextBlock Margin="15" TextWrapping="Wrap" Text="{Binding BodyMessage}" Foreground="Black"/>
        </Border>
        <TextBlock Text="{Binding TimeMessage}" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10,0"/>
    </Grid>
</UserControl>
