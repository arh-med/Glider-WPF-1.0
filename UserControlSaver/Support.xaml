            <TextBlock Foreground="#FF385E69" FontSize="25" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Техническая поддержка:" Margin="90,5,0,0" />
            <TextBlock Foreground="#FF385E69"  Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="Телефон: +7(909)978-94-79" FontSize="15" Margin="120,5,0,0" />
            <TextBlock Foreground="#FF385E69" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="EMAIL: arh_med@mail.ru" FontSize="15" Margin="120,5,0,0" />
            <Image Source="../Picure/technical.png" VerticalAlignment="Bottom" Height="200" Margin="5,5,5,20"/>
            <TextBlock Foreground="#FF385E69" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="© Copyright 2020 Rotarenco Andrei  " FontSize="15" Margin="20,5,40,0" HorizontalAlignment="Right" />
        </StackPanel>
